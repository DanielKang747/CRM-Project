						searchMember(customerCare.SEARCH_LAST_NAME, jTextField.getText().trim());
			    		}
			    		else if (jComboBox.getSelectedIndex() == customerCare.SEARCH_CELL) {
						searchMember(customerCare.SEARCH_CELL, jTextField.getText().trim());
			    		}
			    		else if (jComboBox.getSelectedIndex() == customerCare.SEARCH_ALL) {

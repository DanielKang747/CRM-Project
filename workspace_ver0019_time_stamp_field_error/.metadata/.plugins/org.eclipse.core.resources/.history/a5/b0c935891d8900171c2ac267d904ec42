							searchMember(customerCare.SEARCH_ID, jTextField.getText().trim());
				    		}
				    		else if (jComboBox.getSelectedIndex() == customerCare.SEARCH_FIRST_NAME) {
							searchMember(customerCare.SEARCH_FIRST_NAME, jTextField.getText().trim());
